{
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "L": true
  },
  "rules": {
    "yoda": 0,
    "block-scoped-var": 2,
    "camelcase": 1,
    "comma-style": 2,
    "curly": 0,
    "dot-notation": 0,
    "eqeqeq": [
      2,
      "allow-null"
    ],
    "guard-for-in": 2,
    "key-spacing": 0,
    "new-cap": 2,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-cond-assign": [
      2,
      "except-parens"
    ],
    "no-debugger": 2,
    "no-empty": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-parens": 0,
    "no-irregular-whitespace": 2,
    "no-iterator": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 0,
    "no-multi-str": 0,
    "no-mixed-spaces-and-tabs": 0,
    "no-new": 2,
    "no-plusplus": 0,
    "no-proto": 2,
    "no-script-url": 2,
    "no-sequences": 2,
    "no-shadow": 2,
    "no-undef": 2,
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-use-before-define": [2, "nofunc"],
    "no-with": 2,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-extra-semi": 2, // disallow unnecessary semicolons
    "semi-spacing": [1, {"before": false, "after": true}], // enforce spacing before and after semicolons
    "strict": 0,
    "valid-typeof": 2,
    "wrap-iife": [2, "inside"]
  }
}
